<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为IUserDao接口方法提供sql语句配置 -->
<mapper namespace="com.swing.dao.UserDao">

    <insert id="register" parameterType = "map">
        INSERT INTO user_tbl (email, password, created) VALUES (#{email}, #{password}, #{created})
    </insert>

    <select id="findUserById" parameterType="int" resultType="com.swing.entity.User" >
        SELECT * FROM user_tbl WHERE id = #{id}
    </select>


    <select id="findUserByEmail" parameterType="String" resultType="com.swing.entity.User">
        SELECT * FROM user_tbl WHERE email = #{email}
    </select>

</mapper>

